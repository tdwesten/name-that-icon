<div
  class="flex items-center fixed h-[calc(100vh_-_4rem)] left-0 right-0 justify-center"
>
  <div
    class="grid grid-cols-4 md:grid-cols-12 h-[calc(100vh_-_4rem)] absolute left-0 right-0 top-0 bottom-0"
  >
    {{#each this.icons as |icon|}}
      <div class="md:p-6 text-gray-500 p-4 justify-center flex items-center">
        <FaIcon @icon={{icon}} />
      </div>
    {{/each}}
  </div>
  <div
    class="flex flex-col items-center m-4 bg-gray-800 z-10 w-full md:w-auto p-6 rounded-md text-center"
  >
    <h1 class="text-yellow-500 text-3xl md:text-5xl font-bold">
      Name That Icon
    </h1>
    <p class="text-gray-300 font-light -mb-1">
      A little game to test your knowledge of Font Awesome Icon names
    </p>
    <div class="mt-8">
      <LinkTo
        @route="game"
        type="button"
        @model={{@model.game}}
        class="bg-yellow-500 appearance-none m-1 border-2 inline-block py-6 px-10 rounded-lg border-t-0 border-r-0 border-l-0 text-gray-800 font-bold border-yellow-700 active:border-b-0 active:border-t-2"
      >
        <span class="-mb-1">
          Start the game!
        </span>
      </LinkTo>
    </div>
  </div>
</div>